<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_circle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.msi.kalkulator.CircleActivity">

    <TextView
        android:text="Wynik:"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_wynik"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/textView_wynik"
        android:layout_toLeftOf="@+id/textView_wynik"
        android:layout_toStartOf="@+id/textView_wynik"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_width="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Wprowadź promień koła" />

    <Button
        android:text="Oblicz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/button_pole"
        android:onClick="PoleKola"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="WYCZYŚĆ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_pole"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button6"
        android:textAlignment="center"
        android:onClick="ClearCircle"
        android:backgroundTint="@android:color/holo_red_light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_pole"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:id="@+id/textView4"
        android:textSize="15sp"
        android:text="Pole koła = π * r * r" />

    <TextView
        android:layout_marginTop="21dp"
        android:id="@+id/textView_wynik"
        android:textSize="30sp"
        android:layout_height="40dp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_width="220dp"
        android:layout_below="@+id/editText3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
